{
  "singleQuote": true,
  "printWidth": 120,
  "useTabs": false,
  "proseWrap": "preserve",
  "tabWidth": 2,
  "arrowParens": "always",
  "trailingComma": "es5",
  "xmlWhitespaceSensitivity": "ignore",
  "pluginSearchDirs": ["./node_modules", "./node_modules/.pnpm"],
  "plugins": ["prettier-plugin-packagejson", "@prettier/plugin-xml"]
}
